<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgottenPasswordActivity"
    android:paddingHorizontal="30dp"
    android:id="@+id/forgotLayout">
<TextView
    android:id="@+id/h1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Reset Password"
    android:textStyle="bold"
    android:textSize="24sp"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="30dp"
    />
    <TextView
        android:id="@+id/pText"

        app:layout_constraintTop_toBottomOf="@+id/h1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please enter your email address\n so we need a reset link"
        android:textSize="16sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/editText"
        android:text="Email:"
        android:textStyle="bold"
        android:textSize="20sp"/>
    <EditText
        android:id="@+id/editText"
        android:inputType="textEmailAddress"
        app:layout_constraintTop_toBottomOf="@+id/pText"
        android:layout_marginTop="240dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="mrodiah01@gmail.com"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/forgotPasswordBtn"

        android:textColor="@color/black"
        android:paddingVertical="16dp"
        app:cornerRadius="7dp"
        android:backgroundTint="#00D4AA"
        android:text="Send Link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/editText"/>

</androidx.constraintlayout.widget.ConstraintLayout>