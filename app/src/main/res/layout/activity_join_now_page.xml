<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JoinNowPage">
<ImageView
    android:background="@drawable/first_bg"
    android:layout_width="340dp"
    android:layout_height="520dp"
    app:layout_constraintEnd_toEndOf="parent"
   />
    <ImageView
        android:id="@+id/smallImage"
        android:layout_width="103dp"
        android:layout_height="103dp"
        android:src="@drawable/small_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="150dp"
        android:layout_marginRight="90dp"/>
<ImageView
    android:id="@+id/secondImage"
    android:layout_marginTop="20dp"
    android:layout_width="165dp"
    android:layout_height="165dp"
    android:src="@drawable/second_image"
    android:layout_marginRight="80dp"
    app:layout_constraintTop_toBottomOf="@+id/smallImage"
    app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/h1Text"
        android:textSize="50sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let's Get\nStarted"

        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/secondImage"
        android:layout_marginTop="70dp"
        android:paddingHorizontal="30dp"



     />
  <TextView
      android:id="@+id/pText"
      app:layout_constraintTop_toBottomOf="@+id/h1Text"
      android:paddingHorizontal="30dp"
      android:textSize="20sp"
      android:text="Grow Together"
      android:textStyle="bold"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>
    <Button
        android:layout_marginTop="15dp"
        android:id="@+id/joinButton"
        android:text="Join Now"
        android:backgroundTint="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/pText"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingHorizontal="70dp"
        android:paddingVertical="15dp"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>